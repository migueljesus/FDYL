<h1>Listado de categorias</h1>
<table>
  <tr>
    <thead>
      <th>Code 1</th>
      <th>Code 2</th>
    </thead>
  </tr>
  <% @categoria.each do |catg| %>
  <tr>
    <td><%= catg.cod_cate %></td>
    <td><%= catg.nom_des %></td>
    <td>
      <%= link_to "Mostrar" %>
      <%= link_to "Editar", edit_categoria_path(catg) %>
      <%= link_to "Eliminar", catg, method: :delete,  data: { confirm: "Desea eliminar este articulo"} %>

  </td>
  </tr>
  <% end %>
</table>
